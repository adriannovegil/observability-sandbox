# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
insert_final_newline = true

# Change these settings to your own preference
indent_style = space
indent_size = 4

[*.{ts,tsx,js,jsx,json,css,scss,yml}]
indent_size = 2

[*.{java,xml}]
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
